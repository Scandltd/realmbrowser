<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="realm_browser_DatabaseName">
        <item name="android:textSize">24sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/realm_browser_db_config_primary_text_color</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">4dp</item>
    </style>

    <style name="realm_browser_database_bread_crumb_style">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="realm_browser_database_column_title_style">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/realm_browser_db_table_primary_text_color</item>
    </style>

    <style name="realm_browser_database_column_title_annotation_style">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="realm_browser_database_column_title_type_style">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="realm_browser_ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorAccent">@android:color/white</item>
    </style>

    <!-- Base application theme. -->
    <style name="realm_browser_RealmBrowserTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/realm_browser_colorPrimary</item>
        <item name="colorPrimaryDark">@color/realm_browser_colorPrimaryDark</item>
        <item name="colorAccent">@color/realm_browser_colorAccent</item>
    </style>

    <style name="realm_browser_ProgressDialogStyle" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>
