<?xml version="1.0" encoding="utf-8"?>
<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/edit_boolean_group"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/realm_browser_edit_dialog_padding">

    <RadioButton
        android:id="@+id/edit_boolean_true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/realm_browser_true_string" />

    <RadioButton
        android:id="@+id/edit_boolean_false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/realm_browser_false_string" />
</RadioGroup>