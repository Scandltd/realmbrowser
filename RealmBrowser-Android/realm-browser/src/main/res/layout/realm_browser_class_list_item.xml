<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/realm_browser_class_list_item_padding_bottom"
    android:paddingEnd="@dimen/realm_browser_class_list_padding_right"
    android:paddingLeft="@dimen/realm_browser_class_list_padding_left"
    android:paddingRight="@dimen/realm_browser_class_list_padding_right"
    android:paddingStart="@dimen/realm_browser_class_list_padding_left"
    android:paddingTop="@dimen/realm_browser_class_list_item_padding_top">

    <TextView
        android:id="@+id/class_list_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/class_list_counter"
        android:layout_toStartOf="@+id/class_list_counter"
        android:drawableLeft="@drawable/realm_browser_ic_table"
        android:drawablePadding="@dimen/realm_browser_class_list_item_drawable_padding"
        android:drawableStart="@drawable/realm_browser_ic_table"
        android:textColor="@color/realm_browser_db_config_primary_text_color"
        android:textSize="@dimen/realm_browser_class_list_item_text_size"/>

    <TextView
        android:id="@id/class_list_counter"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/realm_browser_class_list_item_text_size"/>
</RelativeLayout>